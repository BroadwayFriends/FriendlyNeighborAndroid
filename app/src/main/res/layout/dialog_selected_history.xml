<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#232323"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/dialog_history_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="90dp"/>

        <TextView
            android:id="@+id/dialog_history_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Some other info"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_margin="4dp">

            <ImageButton
                android:gravity="center_horizontal"
                android:id="@+id/dialog_history_accept_call"
                android:src="@drawable/ic_call"
                android:tint="@android:color/white"
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#232323"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/Black"
                android:layout_margin="4dp"/>

            <ImageButton
                android:gravity="center_horizontal"
                android:id="@+id/dialog_history_accept_message"
                android:src="@drawable/ic_message"
                android:tint="@android:color/white"
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#232323"/>

        </LinearLayout>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dialog_history_profile_picture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_ppchange"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

</RelativeLayout>